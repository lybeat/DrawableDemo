<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inset_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/inset"
            android:gravity="center_horizontal"
            android:text="Inset" />

        <TextView
            android:id="@+id/clip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/clip"
            android:gravity="center_horizontal"
            android:text="Clip" />

        <TextView
            android:id="@+id/scale_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/scale"
            android:gravity="center_horizontal"
            android:text="Scale" />

        <TextView
            android:id="@+id/rotate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/rotate"
            android:gravity="center_horizontal"
            android:text="Rotate" />
    </LinearLayout>

</ScrollView>